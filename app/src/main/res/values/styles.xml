<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RippleGray">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80808080</item>
        <item name="mrl_rippleAlpha">0.3</item>
    </style>

    <style name="RippleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#FFFFFF</item>
        <item name="mrl_rippleAlpha">0.4</item>
    </style>

    <style name="RipplePink">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#F62B2B</item>
        <item name="mrl_rippleAlpha">0.4</item>
    </style>
</resources>